/* components/recommend/cmp.wxss */
.container{
    display: flex;
    align-items: center;
    padding: 0 10rpx;
    flex-direction: column;
    text-align: center;
    background:#fff;
}
.recommend{
    margin-bottom: 30rpx;
}
.recommend-head {
    margin: 10rpx  0;

}
.recommend-topic{
    position: relative;
    display: block;
    font-size:54rpx;
    letter-spacing: 10rpx;
    padding:0rpx 0 40rpx 0;
}
.recommend-topic::after{
    content:'';
    position: absolute;
    display: block;
    width: 118rpx;
    height: 4rpx;
    background-color: #666;
    left: 50%;
    transform:translateX(-72%);
   margin: 20rpx;
}
.recommend-title{
    margin: 30rpx 0 ;
    font-size: 28rpx;
    
}
 .image{
    width: 700rpx;
    height: 820rpx;
}
.skeleton{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 700rpx;
    height: 1000rpx;
    background-color: #ddd;
}
.loader{
    width: 60rpx;
    height: 60rpx;
    border: 6px solid #666;
    border-radius: 50%;
    border-bottom-color: transparent;
    animation: rotate 1s linear infinite 
}
@keyframes rotate{
    0%{
        transform: rotateZ(0)
    }
    100%{
        transform: rotateZ(360deg)
    }
}
/* components/video/cmp.wxss */
.container{
    
}
.video-place{
    width: 700rpx;
    height: 400rpx;
}
.video{
    width: 100%;
    height: 100%;
}
.poster-cover{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 700rpx;
    height: 400rpx;
    position: relative;
}
.image{
    width: 100%;
    height: 100%;
}
.video-control{
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 100rpx;
    height: 100rpx;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 50%;
}
.iconImg{
    width: 40rpx;
    height: 40rpx;
}
.duration{
    font-size: 28rpx;
    color: white;
}
.mask{
    margin: 0;
    position:fixed;
    background:rgba(0,0,0,0.2);
    width: 750rpx;
    height: 1334rpx;
    top: 0;
}
/* pages/mark/mark.wxss */

.container{
    width: 100%;
    padding: 0;
}
.user-container{
    width: 100%;
    display: flex;
    flex-direction: column;
    background-color: #fff;
}
.userInfo{
    padding: 0 30rpx;
    display: flex;
    justify-content: space-between;
    margin-bottom: 50rpx;
}
.userName{
    font-size: 40rpx;
}
.avatar-box,.avatar{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.share{
    width: 60rpx;
    height: 60rpx;
    padding-left: 30rpx;
    margin: 40rpx 0;
}
.shareBtn{
    display: block;
    width: 60rpx;
    height: 60rpx;
}
.shareBtn .img{
    width: 60rpx;
    height: 60rpx;
}
.getInfo{
    display: block;
    width:100rpx;
    height: 100rpx;
    border-radius: 50%;
    padding: 0;
    border:none;
}
.login{
    width:100rpx;
    height: 100rpx;
    border-radius: 50%;
}